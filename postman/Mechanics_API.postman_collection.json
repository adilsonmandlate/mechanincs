                  "    pm.collectionVariables.set('sos_request_id', jsonData.requestId);",
                  "    pm.test('SOS Request criado com sucesso', function () {",
                  "        pm.expect(jsonData.requestId).to.exist;",
                  "        pm.expect(jsonData.status).to.equal('notifying');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
